<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_headImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:padding="5dp"
        android:src="@drawable/qunliao" />


    <TextView
        android:id="@+id/tv_message_num"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignRight="@+id/iv_headImage"
        android:layout_alignTop="@+id/iv_headImage"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_shape_red"
        android:gravity="center"
        android:singleLine="true"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="120dp"
        android:layout_height="23dp"
        android:layout_alignTop="@+id/iv_headImage"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_headImage"
        android:gravity="center_vertical"
        android:text="张三"
        android:textColor="@color/NomalTextcolor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/iv_headImage"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_headImage"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="约不约"
        android:textColor="@color/SubTextcolor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="100dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_headImage"
        android:layout_marginRight="@dimen/page_spacing"
        android:layout_marginTop="5dp"
        android:gravity="right|center_vertical"
        android:text="刚刚"
        android:textColor="@color/SubTextcolor"
        android:textSize="12sp" />

</RelativeLayout>
